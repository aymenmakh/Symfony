<div class="block">
    Status: {{ status }}
    {% if refundToken %}
        <a href="{{ refundToken.targetUrl }}">Refund</a>
    {% endif %}
    {% if cancelToken %}
        <a href="{{ cancelToken.targetUrl }}">Cancel</a>
    {% endif %}
    {% if captureToken %}
        <a href="{{ captureToken.targetUrl }}">Capture</a>
    {% endif %}
</div>

<div class="block">
    <pre style="white-space: pre;">{{ payment|raw }}</pre>
</div>