{% set totalHT = 0 %}
{% set totalTTC = 0%}
{% for p in produits %}
    {% set totalHT = totalHT + (p.prix * panier[p.id]) %}
    {% set totalTTC = totalTTC + (p.prix * panier[p.id]) %}
{% endfor %}
<a class="cart-link" href="{{ path('panier') }}">
    <span class="title">Shopping cart</span>
    <span class="total">{{ produits|length }} Produits - {{ totalHT }} DT
                    </span>
    <span class="notify notify-left">{{ produits|length }}</span>
</a>
<div class="cart-block">
    <div class="cart-block-content">
        <h5 class="cart-title"></h5>
        <div class="cart-block-list">
            <ul>{% for p in produits %}
                <li class="product-info">
                    <div class="p-left">
                        <a href="#" class="remove_link"></a>
                        <a href="#">
                            <img class="img-responsive" src="{{ asset('Template/' ~ p.photo ~'.jpg') }}" alt="p10">
                        </a>
                    </div>
                    <div class="p-right">
                        <p class="p-name">{{ p.nom }}</p>
                        <p class="p-rice">{{ p.prix }}DT</p>
                        <p></p>
                    </div>
                </li>{% endfor %}

            </ul>
        </div>
        <div class="toal-cart">
            <span>Total</span>
            <span class="toal-price pull-right">{{ totalHT }}DT</span>
        </div>
        <div class="cart-buttons">
            <a href="{{ path('panier') }}" class="btn-check-out">Checkout</a>
        </div>
    </div>
</div>